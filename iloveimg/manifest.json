{
  "manifest_version": 3,
  "name": "iLoveIMG Image Downloader",
  "version": "1.0",
  "description": "Downloads an image from a specific XPath on iloveimg.com",
  "permissions": ["downloads", "scripting", "activeTab"],
  "host_permissions": ["https://www.iloveimg.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}
